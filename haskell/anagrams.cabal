name:                anagrams
version:             0.1.0.0
synopsis:            Find anagrams across lines of an ascii text file
description:         Please see README.md
homepage:            http://github.com/jsdw/anagrams
license:             PublicDomain
author:              James Wilson
build-type:          Simple
cabal-version:       >=1.10

-- Use prime numbers
executable anagrams-primes
  hs-source-dirs:      app
  main-is:             Primes.hs
  default-extensions:  OverloadedStrings, NoImplicitPrelude, ScopedTypeVariables
  ghc-options:         -Wall -threaded -rtsopts
                      -- -fprof-auto -prof
                      -- "-with-rtsopts=-N -p -s -h -i0.1"
                       -O2 -optc-O3 -funfolding-use-threshold=100
  build-depends:       base
                     , classy-prelude
                     , witherable
  default-language:    Haskell2010

-- the base implementation with obvious optimisations
executable anagrams-basic
  hs-source-dirs:      app
  main-is:             Basic.hs
  default-extensions:  OverloadedStrings, BangPatterns
  ghc-options:         -Wall -threaded -rtsopts
                      -- -fprof-auto -prof
                      -- "-with-rtsopts=-N -p -s -h -i0.1"
                       -O2 -optc-O3 -funfolding-use-threshold=100
  build-depends:       base
                     , bytestring
                     , containers
                     , unordered-containers
  default-language:    Haskell2010


